<a href="/dashboard" class="btn">&larr; Back</a>

<div class="admin-title">
    <h2>View / Edit Post</h2>

    <form action="/delete-post/<%= data._id %>?_method=DELETE" method="post">
        <input type="submit" value="Delete-post" class="btn btn-delete">
    </form>
</div>

<form action="/edit-post/<%= data._id %>?_method=PUT" method="post">
    <label for="title">
        <b>Title</b>
    </label>
    <input type="text" name="title" id="" placeholder="Post Title">

    <label for="body">
        <b>Content</b>
    </label>
    <textarea name="body" id="" cols="50" rows="10"></textarea>

    <input type="submit" value="Update-Post" class="btn">
</form>